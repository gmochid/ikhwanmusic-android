<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/home_card_image"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:layout_marginEnd="16dp"
                />

            <ProgressBar
                android:id="@+id/play_progress_bar"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone"
                android:indeterminateDrawable="@drawable/progress"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/pause_status_image"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@android:drawable/ic_media_pause"
                android:visibility="gone"
                />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/play_status_image"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@android:drawable/ic_media_play"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/home_card_title"
                android:layout_toRightOf="@id/home_card_image"
                android:layout_toEndOf="@id/home_card_image"
                android:layout_toLeftOf="@id/play_progress_bar"
                android:layout_toStartOf="@id/play_progress_bar"
                android:layout_alignParentTop="true"
                android:textSize="15sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:id="@+id/home_card_subtitle"
                android:layout_below="@id/home_card_title"
                android:layout_toRightOf="@id/home_card_image"
                android:layout_toEndOf="@id/home_card_image"
                android:layout_toLeftOf="@id/play_progress_bar"
                android:layout_toStartOf="@id/play_progress_bar"
                android:textSize="12sp"
                />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>